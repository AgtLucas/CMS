<div class="btn-group sub-view" style="display:inline-block;">
	<a class="btn btn-primary" href="/admin/episodes"><i class="fa fa-caret-square-o-right"></i> Episodes</a>
	<a class="btn btn-primary dropdown-toggle" data-toggle="dropdown" href="#"><span class="caret"></span></a>
	<ul class="dropdown-menu">
		<li><a href="/admin"><i class="fa fa-dashboard"></i> Dashboard</a></li>
		<li><a href="/admin/episodes"><i class="fa fa-caret-square-o-right"></i> Episodes</a></li>
		<li><a href="/admin/users"><i class="fa fa-user"></i> Users</a></li>
	  </ul>
</div>
<div class="btn-group sub-view" style="display:inline-block;">
	<a class="btn btn-primary" href="/admin/episodes"><i class="fa fa-user"></i> Approved</a>
	<a class="btn btn-primary dropdown-toggle" data-toggle="dropdown" href="#"><span class="caret"></span></a>
	<ul class="dropdown-menu">
		<li><a href="/admin/episodes"><i class="fa fa-pencil"></i> Approved</a></li>
		<li><a href="/admin/episodes/pending"><i class="fa fa-trash-o"></i> Pending</a></li>
	  </ul>
</div>
<section class="stats" style="box-sizing:border-box;margin-top:25px;">
	<div class="row">
		<ul>
			{{#if videos}}
				{{#each videos}}
			<li class="box text-center col-md-4" style="display:inline-block;list-style-type:none;border:1px solid #eee;">
				<a href="/admin/episodes/{{this.id}}" style="color:black;margin:25px;">
					<div class="thumbnail col-md-6 text-center" style="margin-bottom:15px;float:none;margin:0 auto;">
						<img src="http://cdn.panasonic.com/images/imageNotFound400.jpg" width="100" height="75">
					</div>
					<h3 style="color:black;">{{this.title}}</h3>
					<p style="font-size:13px;color:#aaa;">{{this.shownotes.0.shortened}}</p>
				</a>
			</li>
				{{/each}}
			{{else}}
			<li class="box text-center col-md-12" style="display:inline-block;list-style-type:none;padding:25px 0px;">
				<h3>There are no videos to show.</h3>
			</li>
			{{/if}}
		</ul>
	</div>
</section>