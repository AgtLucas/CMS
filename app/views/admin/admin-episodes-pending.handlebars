<div class="btn-group sub-view" style="display:inline-block;">
	<a class="btn btn-primary" href="/admin/episodes/"><i class="icon-user icon-white"></i> Episodes</a>
	<a class="btn btn-primary dropdown-toggle" data-toggle="dropdown" href="#"><span class="caret"></span></a>
	<ul class="dropdown-menu">
		<li><a href="/admin/"><i class="icon-pencil"></i> Dashboard</a></li>
		<li><a href="/admin/episodes/"><i class="icon-trash"></i> Episodes</a></li>
		<li><a href="/admin/users/"><i class="icon-ban-circle"></i> Users</a></li>
	  </ul>
</div>
<div class="btn-group sub-view" style="display:inline-block;">
	<a class="btn btn-primary" href="/admin/episodes/pending/"><i class="icon-user icon-white"></i> Pending</a>
	<a class="btn btn-primary dropdown-toggle" data-toggle="dropdown" href="#"><span class="caret"></span></a>
	<ul class="dropdown-menu">
		<li><a href="/admin/episodes/"><i class="icon-pencil"></i> Approved</a></li>
		<li><a href="/admin/episodes/pending/"><i class="icon-trash"></i> Pending</a></li>
	  </ul>
</div>
<section class="stats" style="box-sizing:border-box;margin-top:25px;">
	<div class="row">
		<ul>
			{{#if videos}}
				{{#each videos}}
			<li class="box text-left col-md-12" style="display:inline-block;list-style-type:none;border:1px solid #eee;padding:25px 15px;">
				<div class="thumbnail col-md-2" style="margin-right:15px;">
					<img src="http://cdn.panasonic.com/images/imageNotFound400.jpg" width="100" height="75" />
				</div>
				<a href="/admin/episodes/pending/{{this.id}}"><h3>{{this.title}}</h3></a>
				<p style="font-size:13px;color:#aaa;">{{this.shownotes.0.shortened}}</p>
				<button type="button" class="btn btn-success" style="float:right;" onclick="document.location='http://google.com/';">Approve</button>
			</li>
				{{/each}}
			{{else}}
			<li class="box text-center col-md-12" style="display:inline-block;list-style-type:none;padding:25px 0px;">
				<h3>There are no videos to approve.</h3>
			</li>
			{{/if}}
		</ul>
	</div>
</section>
<script src="/javascript/jquery.min.js"></script>
<script src="/javascript/bootstrap.min.js"></script>